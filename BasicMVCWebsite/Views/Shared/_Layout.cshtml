<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">
    <script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>
    <title>@ViewBag.Title</title>
</head>
<body >
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-controller="Home" asp-action="Index" class="navbar-brand">Weather</a></li>
                    <li><a asp-controller="Forecast" asp-action="Index" class="navbar-brand">Forecast</a></li>
                    <li>
                        <form method="post" class="btn btn-secondary" asp-area="" asp-controller="Home" asp-action="toggleUnit">
                            <button type="submit" class="btn btn-info">Toggle Unit</button>
                        </form>
                    </li>
                        <li class="nav navbar-nav">
                            <form action="Home/ChangeCityAsync" method="post">
<input class="form-control "type="text" name="input" value="Enter Longitude and Latitude "/><input class="btn btn-primary" type="submit" value="Change City" />
                                
</form>
                        </li>

                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        <div class="row">
            @RenderBody()
        </div>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
